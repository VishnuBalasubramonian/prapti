
<section class="section">
  <div class="container">

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="menu-item menu-grid-item">
          <img class="mb-4" src="assets\img\photos\Bluelogo1.jpg" alt="">
         
        </div>

      </div>
    </div>
    <app-loading-spinner *ngIf="showSpinner"></app-loading-spinner>
    <!-- <div class="col-md-2 col-md-6 col-xs-12 col-lg-2"></div> -->
    <div class="col-md-12 col-md-12 col-xs-12 col-lg-12" style="text-align:center;padding-bottom:5%;padding-top:5%;">

      <div class="row" style="padding-bottom:5%;">
        <div class="col" style="text-align:right;">
          <button (click)='UseCred()' type="button" class="btn btn-outline-success btn-lg"><span>Login With Use Credentials  </span></button>
        </div>
      
      </div>
      <div class="row">
        <ng-container *ngIf='loginCred == 1'>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <form action="#" class="validate-form">
              <div class="row">
                <div class="col">
                  <div class="form-group">
                    <label>Username</label>
                    <input [(ngModel)]="email" name="email" placeholder="Enter your username" type="email" class="form-control" required>
                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label>Password</label>
                    <input name="password" [(ngModel)]="password" placeholder="Enter your password" type="password" class="form-control" required>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-group form-submit">
                    <button type="submit" class="btn btn-success btn-block" (click)='ValidateForm()'><span>Login</span></button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        </ng-container>
        <ng-container *ngIf='QRCode == 1'>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <form action="#" class="validate-form">
              <div class="row">
                <div class="col">
                  <qr-scanner [debug]="false"
                              [canvasWidth]="1080"
                              [canvasHeight]="720"
                              [stopAfterScan]="true"
                              [updateTime]="500">
                  </qr-scanner>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-group form-submit">
                    <button type="submit" class="btn btn-secondary btn-block"><span>Login</span></button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        </ng-container>
      </div>
    </div>
    <!-- <div class="col-md-2 col-md-6 col-xs-12 col-lg-2"></div> -->
  </div>
</section>
